<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Layout -->
    <CornerRadius x:Key="ChaosCornerRadius8">8</CornerRadius>
    <CornerRadius x:Key="ChaosCornerRadius10">10</CornerRadius>
    <CornerRadius x:Key="ChaosCornerRadius12">12</CornerRadius>

    <Thickness x:Key="ChaosPagePadding">24</Thickness>
    <Thickness x:Key="ChaosCardPadding">12</Thickness>

    <!-- Typography -->
    <x:Double x:Key="ChaosTitleFontSize">28</x:Double>
    <x:Double x:Key="ChaosHeadingFontSize">22</x:Double>
    <x:Double x:Key="ChaosSubHeadingFontSize">20</x:Double>

    <!-- Title bar -->
    <x:Double x:Key="ChaosTitleBarHeight">40</x:Double>
</ResourceDictionary>
