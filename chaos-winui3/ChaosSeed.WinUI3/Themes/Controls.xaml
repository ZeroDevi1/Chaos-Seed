<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ChaosCardBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource ChaosCornerRadius8}" />
        <Setter Property="Padding" Value="{StaticResource ChaosCardPadding}" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
    </Style>

    <Style x:Key="ChaosIconButtonStyle" TargetType="Button">
        <Setter Property="MinWidth" Value="36" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="CornerRadius" Value="{StaticResource ChaosCornerRadius8}" />
    </Style>

    <!-- GridViewItem style for "card" tiles: use WinUI 3 built-in visual states (PointerOver/Pressed) -->
    <Style x:Key="ChaosCardGridViewItemStyle" TargetType="GridViewItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,0,12,12" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="CornerRadius" Value="{StaticResource ChaosCornerRadius12}" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
    </Style>

    <Style x:Key="ChaosDanmakuEdgeToggleStyle" TargetType="Button">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="56" />
        <Setter Property="MinWidth" Value="12" />
        <Setter Property="MinHeight" Value="56" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}" />
    </Style>
</ResourceDictionary>
