<Window
    x:Class="ChaosSeed.WinUI3.Windows.DanmakuChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:ChaosSeed.WinUI3.Models">

    <Grid x:Name="Root" Padding="8" KeyDown="OnKeyDown">
        <Border Style="{StaticResource ChaosCardBorderStyle}" Padding="0">
            <ListView
                ItemsSource="{x:Bind Rows, Mode=OneTime}"
                RenderTransformOrigin="0.5,0.5">
                <ListView.RenderTransform>
                    <ScaleTransform ScaleY="-1" />
                </ListView.RenderTransform>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:DanmakuRowVm">
                        <Grid Padding="8" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform ScaleY="-1" />
                            </Grid.RenderTransform>

                            <!-- Keep username + emote + message as ONE flow region, so wrapping looks natural. -->
                            <RichTextBlock FontSize="12" TextWrapping="Wrap">
                                <Paragraph>
                                    <Run Text="{x:Bind UserLabel, Mode=OneWay}" />
                                    <Run Text=" " />
                                    <InlineUIContainer>
                                        <Image
                                            Width="20"
                                            Height="20"
                                            Margin="4,0,4,0"
                                            VerticalAlignment="Center"
                                            Visibility="{x:Bind EmoteVisibility, Mode=OneWay}"
                                            Source="{x:Bind Emote, Mode=OneWay}" />
                                    </InlineUIContainer>
                                    <Run Text="{x:Bind MessageText, Mode=OneWay}" />
                                </Paragraph>
                            </RichTextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Window>
