<Window
    x:Class="ChaosSeed.WinUI3.Windows.DanmakuChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:ChaosSeed.WinUI3.Models">

    <Grid x:Name="Root" Padding="12" RowSpacing="10" KeyDown="OnKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource ChaosCardBorderStyle}" Padding="12">
            <StackPanel Spacing="6">
                <TextBlock Text="Chat" FontSize="18" FontWeight="SemiBold" />
                <TextBlock x:Name="StatusText" Text="未连接" Opacity="0.8" />
                <TextBlock x:Name="BackendText" Text="" Opacity="0.7" />
                <TextBlock Text="Esc 关闭窗口" Opacity="0.5" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource ChaosCardBorderStyle}" Padding="0">
            <ListView
                ItemsSource="{x:Bind Rows, Mode=OneTime}"
                RenderTransformOrigin="0.5,0.5">
                <ListView.RenderTransform>
                    <ScaleTransform ScaleY="-1" />
                </ListView.RenderTransform>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:DanmakuRowVm">
                        <Grid Padding="8" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform ScaleY="-1" />
                            </Grid.RenderTransform>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind UserLabel, Mode=OneWay}" FontSize="12" TextWrapping="Wrap" />
                            <Image
                                Grid.Column="1"
                                Width="24"
                                Height="24"
                                Margin="6,0,0,0"
                                Visibility="{x:Bind EmoteVisibility, Mode=OneWay}"
                                Source="{x:Bind Emote, Mode=OneWay}" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="6,0,0,0"
                                Text="{x:Bind MessageText, Mode=OneWay}"
                                FontSize="12"
                                TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Window>

