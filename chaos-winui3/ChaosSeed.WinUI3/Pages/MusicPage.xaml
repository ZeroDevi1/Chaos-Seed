<Page
    x:Class="ChaosSeed.WinUI3.Pages.MusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChaosSeed.WinUI3.Pages"
    xmlns:controls="using:ChaosSeed.WinUI3.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:music="using:ChaosSeed.WinUI3.Models.Music"
    xmlns:downloads="using:ChaosSeed.WinUI3.Services.Downloads">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <Grid Padding="{StaticResource ChaosPagePadding}">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="10" />
                </TransitionCollection>
            </Grid.Transitions>

            <Grid x:Name="MusicLayout" RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Spacing="12">
                        <TextBlock Text="歌曲" FontSize="28" FontWeight="SemiBold" />
                        <TextBlock Text="搜索单曲/专辑/歌手，登录并下载（下载任务由后端执行，可轮询进度/取消）。" Opacity="0.8" />
                    </StackPanel>

                <Grid Grid.Row="1" x:Name="CardsGrid" ColumnSpacing="12" RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="CardsCol0" Width="*" />
                        <ColumnDefinition x:Name="CardsCol1" Width="0" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

	                    <VisualStateManager.VisualStateGroups>
		                        <VisualStateGroup>
		                            <VisualState x:Name="Narrow">
		                                <VisualState.StateTriggers>
		                                    <AdaptiveTrigger MinWindowWidth="0" />
		                                </VisualState.StateTriggers>
		                                <VisualState.Setters>
		                                    <Setter Target="CardsCol1.Width" Value="0" />
		                                    <Setter Target="BackendCard.(Grid.Row)" Value="0" />
		                                    <Setter Target="BackendCard.(Grid.Column)" Value="0" />
		                                    <Setter Target="SearchCard.(Grid.Row)" Value="1" />
	                                    <Setter Target="SearchCard.(Grid.Column)" Value="0" />
	                                    <Setter Target="DownloadCard.(Grid.Row)" Value="2" />
	                                    <Setter Target="DownloadCard.(Grid.Column)" Value="0" />
	                                    <Setter Target="DownloadCard.(Grid.ColumnSpan)" Value="1" />

	                                    <Setter Target="TracksList.MaxHeight" Value="420" />
	                                    <Setter Target="AlbumsList.MaxHeight" Value="420" />
	                                    <Setter Target="ArtistsList.MaxHeight" Value="420" />
	                                    <Setter Target="DetailTracksList.MaxHeight" Value="320" />
	                                    <Setter Target="DetailAlbumsList.MaxHeight" Value="320" />
	                                    <Setter Target="DownloadSessionsList.MaxHeight" Value="520" />
	                                </VisualState.Setters>
	                            </VisualState>
	                            <VisualState x:Name="Wide">
	                                <VisualState.StateTriggers>
	                                    <AdaptiveTrigger MinWindowWidth="1200" />
	                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Target="CardsCol1.Width" Value="*" />
                                    <Setter Target="BackendCard.(Grid.Row)" Value="0" />
                                    <Setter Target="BackendCard.(Grid.Column)" Value="0" />
                                    <Setter Target="SearchCard.(Grid.Row)" Value="0" />
                                    <Setter Target="SearchCard.(Grid.Column)" Value="1" />
                                    <Setter Target="DownloadCard.(Grid.Row)" Value="1" />
                                    <Setter Target="DownloadCard.(Grid.Column)" Value="0" />
                                    <Setter Target="DownloadCard.(Grid.ColumnSpan)" Value="2" />

                                    <Setter Target="TracksList.MaxHeight" Value="680" />
                                    <Setter Target="AlbumsList.MaxHeight" Value="680" />
                                    <Setter Target="ArtistsList.MaxHeight" Value="680" />
                                    <Setter Target="DetailTracksList.MaxHeight" Value="520" />
                                    <Setter Target="DetailAlbumsList.MaxHeight" Value="520" />
                                    <Setter Target="DownloadSessionsList.MaxHeight" Value="760" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>

                    <Border x:Name="BackendCard" Grid.Row="0" Grid.Column="0" Style="{StaticResource ChaosCardBorderStyle}" Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="后端 / 配置 / 登录" FontSize="18" FontWeight="SemiBold" />
                        <muxc:InfoBar x:Name="BackendBar" IsOpen="False" />

                        <Grid ColumnSpacing="12" RowSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="输出目录" Opacity="0.7" VerticalAlignment="Center" />
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                                <TextBlock x:Name="OutDirText" Text="-" VerticalAlignment="Center" TextWrapping="Wrap" />
                                <Button Content="选择目录" Click="OnPickOutDirClicked" />
                            </StackPanel>
                        </Grid>

	                        <muxc:Expander x:Name="LoginExpander" IsExpanded="False">
	                            <muxc:Expander.Header>
	                                <StackPanel Orientation="Horizontal" Spacing="12">
	                                    <TextBlock Text="登录（QQ/酷狗）" FontWeight="SemiBold" />
	                                    <TextBlock x:Name="LoginSummaryText" Opacity="0.75" VerticalAlignment="Center" TextWrapping="NoWrap" />
	                                </StackPanel>
	                            </muxc:Expander.Header>

	                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
	                                <StackPanel Spacing="10">
	                                    <StackPanel x:Name="QqLoginPanel" Orientation="Horizontal" Spacing="12">
	                                        <Button Content="QQ 扫码登录" Click="OnQqLoginQqClicked" />
	                                        <Button Content="微信扫码登录" Click="OnQqLoginWechatClicked" />
	                                        <Button Content="刷新 Cookie" Click="OnQqRefreshCookieClicked" />
	                                        <TextBlock x:Name="QqLoginStatusText" Text="未登录" Opacity="0.8" VerticalAlignment="Center" />
	                                    </StackPanel>

	                                    <StackPanel x:Name="KugouLoginPanel" Orientation="Horizontal" Spacing="12">
	                                        <Button Content="酷狗扫码登录" Click="OnKugouLoginQqClicked" />
	                                        <Button Content="酷狗微信扫码登录" Click="OnKugouLoginWechatClicked" />
	                                        <TextBlock x:Name="KugouLoginStatusText" Text="未登录" Opacity="0.8" VerticalAlignment="Center" />
	                                    </StackPanel>

		                                    <Border x:Name="QrPanel" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="12" Visibility="Collapsed">
		                                        <Grid ColumnSpacing="12">
		                                            <Grid.ColumnDefinitions>
		                                                <ColumnDefinition Width="200" />
		                                                <ColumnDefinition Width="*" />
		                                            </Grid.ColumnDefinitions>
		                                            <Border CornerRadius="6" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="6" HorizontalAlignment="Center" VerticalAlignment="Center">
		                                                <Image x:Name="QrImage" Width="180" Height="180" Stretch="Uniform" />
		                                            </Border>
		                                            <TextBlock x:Name="QrHintText" Grid.Column="1" Text="-" VerticalAlignment="Center" Opacity="0.75" TextWrapping="Wrap" />
		                                        </Grid>
		                                    </Border>
		                                </StackPanel>
		                            </Border>
		                        </muxc:Expander>
		                    </StackPanel>
	                </Border>

                <Border x:Name="SearchCard" Grid.Row="1" Grid.Column="0" Style="{StaticResource ChaosCardBorderStyle}" Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="搜索" FontSize="18" FontWeight="SemiBold" />

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="ServiceCombo" SelectionChanged="OnServiceChanged" Width="120">
                                <ComboBoxItem Content="全部" Tag="all" />
                                <ComboBoxItem Content="QQ 音乐" Tag="qq" />
                                <ComboBoxItem Content="酷狗" Tag="kugou" />
                                <ComboBoxItem Content="网易云" Tag="netease" />
                                <ComboBoxItem Content="酷我" Tag="kuwo" />
                            </ComboBox>

                            <ComboBox Grid.Column="1" x:Name="SearchModeCombo" SelectionChanged="OnSearchModeChanged" Width="120">
                                <ComboBoxItem Content="单曲" Tag="track" />
                                <ComboBoxItem Content="专辑" Tag="album" />
                                <ComboBoxItem Content="歌手" Tag="artist" />
                            </ComboBox>

                            <TextBox Grid.Column="2" x:Name="KeywordBox" PlaceholderText="关键词" KeyDown="OnKeywordBoxKeyDown" />
                            <Button Grid.Column="3" x:Name="SearchBtn" Content="搜索" Click="OnSearchClicked" />
                        </Grid>

                        <muxc:InfoBar x:Name="SearchBar" IsOpen="False" />

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="默认音质" Opacity="0.7" VerticalAlignment="Center" />
                            <ComboBox x:Name="DefaultQualityCombo" Width="160" SelectionChanged="OnDefaultQualityChanged">
                                <ComboBoxItem Content="最高（自动）" Tag="best" />
                                <ComboBoxItem Content="FLAC" Tag="flac" />
                                <ComboBoxItem Content="MP3 320" Tag="mp3_320" />
                                <ComboBoxItem Content="MP3 192" Tag="mp3_192" />
                                <ComboBoxItem Content="MP3 128" Tag="mp3_128" />
                            </ComboBox>
                        </StackPanel>

                        <StackPanel x:Name="PagingPanel" Orientation="Horizontal" Spacing="12" Visibility="Collapsed">
                            <Button x:Name="PrevPageBtn" Content="上一页" Click="OnPrevPageClicked" />
                            <TextBlock x:Name="PageText" Text="第 1 页" VerticalAlignment="Center" Opacity="0.75" />
                            <Button x:Name="NextPageBtn" Content="下一页" Click="OnNextPageClicked" />
                            <TextBlock x:Name="PagingHintText" Text="" VerticalAlignment="Center" Opacity="0.7" TextWrapping="NoWrap" />
                        </StackPanel>

                        <ListView
                            x:Name="TracksList"
                            ItemsSource="{x:Bind TrackResults, Mode=OneWay}"
                            Visibility="Collapsed"
                            MaxHeight="420">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:MusicTrackVm">
                                        <Grid Padding="10" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="56" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="180" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                        <Border CornerRadius="6" Width="48" Height="48" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <Image Source="{x:Bind Cover}" Stretch="UniformToFill" />
                                        </Border>

                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                <TextBlock Text="{x:Bind ServiceText}" Opacity="0.65" VerticalAlignment="Center" />
                                            </StackPanel>
                                            <TextBlock Text="{x:Bind Subtitle}" Opacity="0.75" TextWrapping="Wrap" />
                                        </StackPanel>

                                        <ComboBox Grid.Column="2"
                                                  ItemsSource="{x:Bind Qualities}"
                                                  SelectedValuePath="Id"
                                                  SelectedValue="{x:Bind SelectedQualityId, Mode=TwoWay}"
                                                  VerticalAlignment="Center">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="music:MusicQuality">
                                                    <TextBlock Text="{x:Bind Label}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        <Button Grid.Column="3" Content="{x:Bind PreviewBtnText}" Tag="{x:Bind}" Click="OnPreviewTrackClicked" VerticalAlignment="Center" />
                                        <Button Grid.Column="4" Content="下载" Tag="{x:Bind}" Click="OnDownloadTrackClicked" VerticalAlignment="Center" />
                                        <Button Grid.Column="5" Content="+" Tag="{x:Bind}" Click="OnAddToPlaylistClicked" VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <ListView
                            x:Name="AlbumsList"
                            ItemsSource="{x:Bind AlbumResults, Mode=OneWay}"
                            Visibility="Collapsed"
                            MaxHeight="420">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:MusicAlbumVm">
                                    <Grid Padding="10" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="6" Width="48" Height="48" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <Image Source="{x:Bind Cover}" Stretch="UniformToFill" />
                                        </Border>
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            <TextBlock Text="{x:Bind Subtitle}" Opacity="0.75" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="查看曲目" Tag="{x:Bind}" Click="OnOpenAlbumClicked" />
                                        <Button Grid.Column="3" Content="下载专辑" Tag="{x:Bind}" Click="OnDownloadAlbumClicked" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <ListView
                            x:Name="ArtistsList"
                            ItemsSource="{x:Bind ArtistResults, Mode=OneWay}"
                            Visibility="Collapsed"
                            MaxHeight="420">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:MusicArtistVm">
                                    <Grid Padding="10" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="6" Width="48" Height="48" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <Image Source="{x:Bind Cover}" Stretch="UniformToFill" />
                                        </Border>
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                            <TextBlock Text="{x:Bind Subtitle}" Opacity="0.6" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="查看专辑" Tag="{x:Bind}" Click="OnOpenArtistClicked" />
                                        <Button Grid.Column="3" Content="下载全部" Tag="{x:Bind}" Click="OnDownloadArtistAllClicked" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Border x:Name="DetailBorder" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Visibility="Collapsed">
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock x:Name="DetailTitleText" Text="-" FontWeight="SemiBold" TextWrapping="Wrap" />
                                    <Button x:Name="DetailDownloadBtn" Content="下载" Click="OnDetailDownloadClicked" />
                                    <Button Content="关闭" Click="OnCloseDetailClicked" />
                                </StackPanel>

                                <ListView
                                    x:Name="DetailTracksList"
                                    ItemsSource="{x:Bind DetailTrackResults, Mode=OneWay}"
                                    Visibility="Collapsed"
                                    MaxHeight="320">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="local:MusicTrackVm">
                                            <Grid Padding="8" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="180" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Spacing="2">
                                                    <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                    <TextBlock Text="{x:Bind Subtitle}" Opacity="0.75" TextWrapping="Wrap" />
                                                </StackPanel>

                                                <ComboBox Grid.Column="1"
                                                          ItemsSource="{x:Bind Qualities}"
                                                          SelectedValuePath="Id"
                                                          SelectedValue="{x:Bind SelectedQualityId, Mode=TwoWay}"
                                                          VerticalAlignment="Center">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate x:DataType="music:MusicQuality">
                                                            <TextBlock Text="{x:Bind Label}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                                <Button Grid.Column="2" Content="{x:Bind PreviewBtnText}" Tag="{x:Bind}" Click="OnPreviewTrackClicked" VerticalAlignment="Center" />
                                                <Button Grid.Column="3" Content="下载" Tag="{x:Bind}" Click="OnDownloadTrackClicked" VerticalAlignment="Center" />
                                                <Button Grid.Column="4" Content="+" Tag="{x:Bind}" Click="OnAddToPlaylistClicked" VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <ListView
                                    x:Name="DetailAlbumsList"
                                    ItemsSource="{x:Bind DetailAlbumResults, Mode=OneWay}"
                                    Visibility="Collapsed"
                                    MaxHeight="320">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="local:MusicAlbumVm">
                                            <Grid Padding="8" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="56" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border CornerRadius="6" Width="48" Height="48" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                                    <Image Source="{x:Bind Cover}" Stretch="UniformToFill" />
                                                </Border>
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                    <TextBlock Text="{x:Bind Subtitle}" Opacity="0.75" TextWrapping="Wrap" />
                                                </StackPanel>
                                                <Button Grid.Column="2" Content="下载专辑" Tag="{x:Bind}" Click="OnDownloadAlbumClicked" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border x:Name="DownloadCard" Grid.Row="2" Grid.Column="0" Style="{StaticResource ChaosCardBorderStyle}" Padding="16">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="下载任务" FontSize="18" FontWeight="SemiBold" />
                            <Button Content="打开下载页" Click="OnOpenDownloadsPageClicked" />
                        </StackPanel>
                        <muxc:InfoBar x:Name="DownloadBar" IsOpen="False" />

                        <ListView
                            x:Name="DownloadSessionsList"
                            ItemsSource="{x:Bind ActiveDownloadSessions, Mode=OneWay}"
                            MaxHeight="520">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="downloads:DownloadSessionVm">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                        <StackPanel Spacing="8">
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" />
                                                <TextBlock Text="{x:Bind State}" Opacity="0.75" VerticalAlignment="Center" />
                                                <Button Content="取消" Tag="{x:Bind}" Click="OnCancelDownloadClicked" />
                                            </StackPanel>
                                            <TextBlock Text="{x:Bind Totals}" Opacity="0.75" TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            </Grid>
        </ScrollViewer>

        <controls:MiniPlayerControl Grid.Row="1" Margin="{StaticResource ChaosPagePadding}" />
    </Grid>
</Page>
