<Page
    x:Class="ChaosSeed.WinUI3.Pages.MusicPageV2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16" ColumnSpacing="16" RowSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Spacing="12">
            <TextBlock Text="Now Playing (V2)" FontSize="20" FontWeight="SemiBold" />

            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="16" Width="220" Height="220" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Image x:Name="CoverImg" Stretch="UniformToFill" />
                </Border>

                <StackPanel Grid.Column="1" Spacing="10">
                    <TextBlock x:Name="TitleText" Text="-" FontSize="22" FontWeight="SemiBold" TextWrapping="Wrap" />
                    <TextBlock x:Name="MetaText" Text="" Opacity="0.75" TextWrapping="Wrap" />

                    <Grid RowSpacing="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Slider
                            x:Name="PosSlider"
                            Grid.Row="0"
                            Minimum="0"
                            Maximum="1"
                            ValueChanged="OnPosSliderValueChanged"
                            PointerPressed="OnPosPointerPressed"
                            PointerReleased="OnPosPointerReleased" />

                        <Grid Grid.Row="1" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="PosText" Grid.Column="0" Text="00:00" Opacity="0.75" />
                            <TextBlock x:Name="DurText" Grid.Column="2" Text="--:--" Opacity="0.75" />
                        </Grid>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Prev" Click="OnPrevClicked" />
                        <Button x:Name="PlayPauseBtn" Content="Play" Click="OnPlayPauseClicked" />
                        <Button Content="Next" Click="OnNextClicked" />
                        <Button Content="Stop" Click="OnStopClicked" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="12">
            <TextBlock Text="Playlist" FontSize="20" FontWeight="SemiBold" />
            <ListView x:Name="PlaylistList" SelectionChanged="OnPlaylistSelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Spacing="2">
                            <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding Subtitle}" Opacity="0.7" FontSize="12" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>

