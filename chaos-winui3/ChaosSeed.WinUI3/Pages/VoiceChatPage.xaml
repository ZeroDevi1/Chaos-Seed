<Page
    x:Class="ChaosSeed.WinUI3.Pages.VoiceChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChaosSeed.WinUI3.Pages"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer>
        <Grid Padding="{StaticResource ChaosPagePadding}" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="10" />
                </TransitionCollection>
            </Grid.Transitions>

            <StackPanel Grid.Row="0" Spacing="6">
                <TextBlock Text="实时对话（开发中）" FontSize="28" FontWeight="SemiBold" />
                <TextBlock
                    Text="规划：音频/文本输入 → ASR 转文本 → LLM 生成回复 → TTS 流式输出 PCM（类似 AI 语音通话）。当前仅预留页面样式，暂不实现业务逻辑。"
                    Opacity="0.8"
                    TextWrapping="Wrap" />
            </StackPanel>

            <muxc:InfoBar
                Grid.Row="1"
                IsOpen="True"
                Severity="Warning"
                Title="提示"
                Message="该功能为长期开发目标，目前仅提供 UI 占位。" />

            <Border Grid.Row="2" Style="{StaticResource ChaosCardBorderStyle}" Padding="16">
                <StackPanel Spacing="10">
                    <TextBlock Text="会话" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="（占位）这里将显示对话消息列表（用户/AI），支持滚动、复制文本、回放语音。" Opacity="0.75" TextWrapping="Wrap" />
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10" Padding="12" MinHeight="220">
                        <TextBlock Text="消息列表占位…" Opacity="0.65" />
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Style="{StaticResource ChaosCardBorderStyle}" Padding="16">
                <StackPanel Spacing="10">
                    <TextBlock Text="输入" FontSize="18" FontWeight="SemiBold" />
                    <TextBox PlaceholderText="（占位）输入文本，或点击麦克风开始录音" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="录音" IsEnabled="False" />
                        <Button Content="发送" IsEnabled="False" />
                        <Button Content="结束会话" IsEnabled="False" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
