{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chaos-seed",
  "version": "0.1.1",
  "identifier": "com.antigravity.chaosseed",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Chaos Seed",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"]
  }
}
